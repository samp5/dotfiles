{
    "layer": "top",
    "modules-left": ["sway/workspaces", "sway/mode"],
    "modules-right": ["idle_inhibitor","memory","temperature", "cpu", "battery", "backlight","clock", "network"],
    "sway/window": {
        "max-length": 50
    },
    "network":{
      "on-click": "~/dotfiles/sway/scripts/wifi_script",
      "format": " {ifname}",
      "tooltip-format": "Network: {essid} ({signalStrength})\n󱀣 {netmask}\n󰺆 {gwaddr}\n󰲐 {ipaddr}",
      "format-disconnected": "",
    },
    "idle_inhibitor": {
      "format": "{icon}",
      "format-icons": {
        "activated": "",
        "deactivated": ""
      },
    },
    "cpu": {
      "on-click": "wezterm start gotop",
      "format": "󰍛 {usage}%",
    },
    "battery": {
        "states":{
          "warning": 30,
          "critical": 15,
        },
        "format": "{capacity}% {icon} ",
        "format-icons": ["", "", "", "", ""],
        "tooltip-format": "{timeTo}\n",
    },
    "clock": {
        "format-alt": "{:%a, %d. %b  %H:%M}"
    },
    "memory": {
      "on-click": "wezterm start gotop",
      "interval": 30,
      "format": " {used:0.1f}G/{total:0.1f}G",
      "tooltip-format": "Total: {percentage}%\n",
    },
    "temperature": {
      "on-click": "wezterm start gotop",
      "format": "{temperatureC}°C",
      "critical-threshold": 70,
      "format-critical": "󰠨 {temperatureC}°C" ,
    },
    "backlight": {
      "device": "intel_backlight",
      "format": "{percent}% {icon}",
      "format-icons": ["", ""]
    },
}
